<div class="comments">
  {{#each this}}
    <div class="comment-card">
      <h3 class="comment-card2"></h3>
      <section class="comment card-body">
        <div class="text">
          {{comment_text}}
        </div>
        <div class="comment-user">
          -{{user.username}},
          {{format_date created_at}}
        </div>
      </section>
    </div>
  {{/each}}
</div>