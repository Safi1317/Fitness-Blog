<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="stylesheet" type="text/css" href="/css/style.css" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-aFq/bzH65dt+w6FI2ooMVUpc+21e0SRygnTpmBvdBgSdnuTN7QbdgL+OapgHtvPp" crossorigin="anonymous" />

  <title>Fitness Talks</title>
</head>

<body>

  <header>

    <div class="navbardiv">
      <img class="logoimg" src="/images/fitneses_talk_logo.png" alt="logo" />
      <ul class="navlinks">
        <li><a href="/">Home</a></li>
        <li id="loginbutton">
          {{#if loggedIn}}
          {{!-- <a href="/api/activity/:id">Workout</a> | --}}
          <button id="logout" class="btn-no-style">Logout</button>
          {{else}}
          <a href="/login">Login</a>
          {{/if}}
        </li>

      </ul>
    </div>

  </header>

  <main>


    <div class="activity">
      {{{body}}}
    </div>
  </main>

  {{#if loggedIn}}
  <script src="/js/logout.js"></script>
  {{/if}}


  <div class="suggestions">

    <p>Select a muscle to get workout suggestions</p>
    <select id="muscle-suggestion">
      <option value="abdominals">Abdominals</option>
      <option value="abductors">Abductors</option>
      <option value="adductors">Adductors</option>
      <option value="biceps">Biceps</option>
      <option value="calves">Calves</option>
      <option value="chest">Chest</option>
      <option value="forearms">Forearms</option>
      <option value="glutes">Glutes</option>
      <option value="hamstrings">Hamstrings</option>
      <option value="lats">Lats</option>
      <option value="lower_back">Lower_Back</option>
      <option value="middle_back">Middle_Back</option>
      <option value="neck">Neck</option>
      <option value="quadriceps">Quadriceps</option>
      <option value="traps">Traps</option>
      <option value="triceps">Triceps</option>
    </select>
    <button id="muscle-suggestion-btn"> Get Suggestions </button>
    <br />
  </div>
  <div id="muscle">
    <ul id="data-container"></ul>
  </div>

  <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-qKXV1j0HvMUeCBQ+QVp7JcfGl760yU08IQ+GpUo5hlbpg51QRiuqHAJz8+BrxE/N"
    crossorigin="anonymous"></script>

<script src="/js/workoutRecommender.js"></script>

</body>



</html>